@model IEnumerable<CharliesSnackBar.Models.MenuItem>
@{
    ViewData["Title"] = "Index";
}
<br />
<h2>Menu Item List</h2>
<br />
@Html.Partial("_CreateButtonPartial")
<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Price)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.SubCategoryId)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(x => item.Name)
            </td>
            <td>
                @Html.DisplayFor(x => item.Price)
            </td>
            <td>
                @Html.DisplayFor(x => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(x => item.SubCategory.Name)
            </td>
            <td>
                @Html.Partial("_TableButtonPartial", item.Id)
            </td>
        </tr>
        }
    </table>
</div>
