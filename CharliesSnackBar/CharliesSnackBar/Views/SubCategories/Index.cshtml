@model IEnumerable<CharliesSnackBar.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
}
<br />
<h2>Sub Category List</h2>
<br />
@Html.Partial("_CreateButtonPartial")
<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Category.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayNameFor(x => item.Name)
            </td>
            <td>
                @Html.DisplayNameFor(x => item.Category.Name)
            </td>
            <td>
                @Html.Partial("_TableButtonPartial",item.Id)
            </td>
        </tr>
        }
    </table>
</div>
