@model IEnumerable<CharliesSnackBar.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Category</h2>
<br />
@Html.Partial("_CreateButtonPartial")
<div class="form-border">
    <table class="table">        
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DsplayOrder)
                </th>
                <th></th>
                <th></th>
            </tr>        
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DsplayOrder)
                    </td>
                    <td>
                        @Html.Partial("_TableButtonPartial", item.Id)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>